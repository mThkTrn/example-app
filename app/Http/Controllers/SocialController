public function redirectToGoogle()
{
    return Socialite::driver('google')->with(['hd' => 'your-domain.com'])->redirect();
}

public function processGoogleCallback()
{
    try {
        $socialUser = Socialite::driver('google')->user();
        // Check if the user's email matches your domain and log them in
        $user = User::firstOrCreate(['email' => $socialUser->getEmail()], [
            'name' => $socialUser->getName(),
            // Other user details
        ]);
        Auth::login($user);
        return redirect()->intended('/nova');
    } catch (Exception $e) {
        return redirect()->route('nova.login')->withErrors(['email' => 'Unable to login']);
    }
}